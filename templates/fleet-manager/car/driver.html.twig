{% extends 'fleet-manager/layout/base.html.twig' %}

{% block body %}

    {{ form_start(form, {'attr': {'id': 'driver'}}) }}
        <div class="col s12">
            {{ form_label(form.driver) }}
            {{ form_widget(form.driver, {'attr': {'class': 'driver'}}) }}
            <div class="form-error">
                {{ form_errors(form.driver) }}
            </div>
        </div>
        <div class="col s12" style="margin-top: 1rem;">
            <button class="btn btn-small" type="submit">Submit</button>
            <a href="{{ path('cars_show', {'plates': car.plates}) }}">
                <button class="btn btn-small" type="button">Cancel</button>
            </a>
        </div>
    {{ form_end(form) }}

{% endblock body %}

{% block scripts %}
<script>
    $(document).ready(function() {
        $('.driver').select2({'width': '100%'});
    });
</script>
{% endblock scripts %}