{% extends 'fleet-manager/layout/base.html.twig' %}

{% block title %}Driver info{% endblock %}

{% block body %}
<div class="row">
    <div class="col s12 m12">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Driver data</span>
                {% include 'fleet-manager/driver/partials/info.html.twig' %}
            </div>
            <div class="card-action">
                <a href="{{ path('driver_edit', { 'id': driver.id }) }}" >
                    <button class="btn btn-small">EDIT</button>
                    <button class="btn btn-small">STATISTICS</button>
                </a>
            </div>
        </div>
    </div>
    <div class="col s12 m12">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Cars assigned</span>
                <ul class="collection">
                    {% for car in driver.cars %}
                        <li class="collection-item avatar">
                            <span class="title">{{ car.plates }}</span>
                            <p>{{ car.model.name }} {{ car.year }}</p>
                            <a href="" class="secondary-content">
                                <button class="btn btn-small red darken-3">remove</button>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="card-action">
                <a href="#"><button class="btn btn-small">ADD CAR</button></a>
            </div>
        </div>
    </div>
    <div class="col m12">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Driver history (most recent)</span>
                <p>most recent</p>
            </div>
            <div class="card-action">
                <a href="#"><button class="btn btn-small">BROWSE</button></a>
            </div>
        </div>
    </div>
</div>
{% endblock body %}