{% extends 'admin/layout/base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Car brands in database</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered">
                        <tbody><tr>
                            <th style="width: 10px">#</th>
                            <th>Task</th>
                            <th style="width: 100px">Number of cars</th>
                            <th>Actions</th>
                        </tr>
                        {% for brand in brands %}
                        <tr>
                            <td>1.</td>
                            <td>{{ brand.name }}</td>
                            <td><span class="badge bg-red">55</span></td>
                            <td>
                                {% include 'admin/brands/_delete_form.html.twig' %}
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-danger" form="delete-{{ brand.id }}">Delete</button>
                                    <a class="btn btn-primary" href="{{ path('admin_brands_edit', { 'id': brand.id }) }}">Update</a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <a href="{{ path('admin_brands_new') }}" class="btn btn-sm btn-info btn-flat pull-left">Add Brand</a>
                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">«</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">»</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}