{% extends 'app/base.html.twig' %}

{% block body %}
    {% include 'app/car/_form.html.twig' %}
{% endblock body %}

{% block scripts %}
    <script>
        $(document).ready(function(){
            $('.select2').select2({ 'width': '100%'});

            $('.brand').select2({ 'width': '100%'})
                .on('change', function() {
                    $('.brand-names')
                        .empty()
                        .trigger('change')
                });

            $('.brand-names').select2({
                width: '100%' ,
                ajax: {
                    url:  function (params) {
                        return '/cars/model-names/' + $('.brand').val();
                    } ,
                    dataType: 'json'
                }});
        });
    </script>
{% endblock %}